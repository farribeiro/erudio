<pdf>
    {% for disciplina, alunos in folhas %}
        {% embed 'reports/templates/page.twig' %}
            {% block pageType %}A4{% endblock %}

            {% block title %}
                <h1>Espelho de Notas {{"now"|date('Y')}}</h1>
            {% endblock %}

            {% block headerHeight %}70px{% endblock %}

            {% block info %}
                <p>
                    <strong>Disciplina: {{disciplina}}</strong>
                </p>
                <p>
                    Turma: {{turma.nomeExibicao}}
                </p>
                <p>
                    Curso: {{turma.etapa.curso.nome}}
                </p>
            {% endblock %}
                  
            {% block content %}    
                <table font-size="10px" border-type="none">
                    <tr>
                        <td width="18">
                            <strong>Nยบ</strong>
                        </td>
                        <td>
                            <strong>Aluno</strong>
                        </td>
                        {% for q in 1..quantidadeMedias %}
                            <td width="70px">
                                <strong>{{q}}ยบ {{unidadeRegime}}</strong>
                            </td>
                        {% endfor %}
                        <td width="40px">
                            <strong>Exame Final</strong>
                        </td>
                        <td width="70px">
                            <strong>Resultado Final</strong>
                        </td>
                        <td width="90px">
                            <strong>Faltas</strong>
                        </td>
                    </tr>
                    {% for i, aluno in alunos %}
                        <tr line-height="15px">
                            <td>{{i + 1}}</td>
                            <td text-align="left">
                                {{aluno.nomeAluno}}
                            </td>
                            {% for m in aluno.medias %}
                                <td>{{m.valor ? (m.valor|number_format(2)|last == 0 ? m.valor|number_format(1) : m.valor|number_format(2))}}</td>
                            {% endfor %}
                            <td>-</td>
                            <td></td>
                            {% set totalFaltas = 0 %}
                            {% for media in aluno.medias %}
                                {% set totalFaltas = totalFaltas + media.faltas %}
                            {% endfor %}
                            <td>{{totalFaltas}}</td>
                        </tr>
                    {% endfor %}
                </table>
            {% endblock %}
    {% endembed %}
{% endfor %}
</pdf>


