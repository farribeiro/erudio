<pdf orientation="L">
    {% embed 'reports/templates/page.twig' %}
        {% block title %}
            <h1>Alunos Enturmados</h1>
            <h3>Quantitativo por Instituição</h3>
        {% endblock %}
        {% block content %}
            {% for rel in relatorios %}
                <div margin-top="15px" font-size="8px" breakable="false">
                    <h3 margin-bottom='5px'>{{rel.unidadeEnsino.nomeCompleto}}</h3>
                    <table>
                        <tr>
                            <td><strong>Curso</strong></td>
                            <td><strong>Etapa</strong></td>
                            <td><strong>Turma</strong></td>
                            <td><strong>Turno</strong></td>
                            <td><strong>Masc</strong></td>
                            <td><strong>Fem</strong></td>
                            <td><strong>Total</strong></td>
                        </tr>
                        {% for e in rel.enturmados %}
                            <tr>
                                <td>{{e.turma.etapa.curso.nome}}</td>
                                <td>{{e.turma.etapa.nome}}</td>
                                <td>{{e.turma.nome}} - {{e.turma.apelido}}</td>
                                <td>{{e.turma.turno.nome}}</td>
                                <td>{{e.masculino}}</td>
                                <td>{{e.feminino}}</td>
                                <td>{{e.total}}</td>
                            </tr>
                        {% endfor %}
                        <tr>
                            <td colspan="4" text-align="right">
                                <strong>TOTAL</strong>
                            </td>
                            <td>{{rel.totais.masculino}}</td>
                            <td>{{rel.totais.feminino}}</td>
                            <td>{{rel.totais.masculino + rel.totais.feminino}}</td>
                        </tr>
                    </table>
                </div>
            {% endfor %}
        {% endblock %}
    {% endembed %}
</pdf>

